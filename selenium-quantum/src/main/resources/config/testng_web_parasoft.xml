<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Web Automation Suite" verbose="0" parallel="tests" thread-count="1" preserve-order="true">
    <listeners>
        <listener class-name="com.quantum.listeners.QuantumReportiumListener"/>
    </listeners>

    <test name="Parabank" enabled="true">
        <!--<parameter name="driver.capabilities.model" value="Galaxy.*"></parameter>-->
        <parameter name="perfecto.capabilities.deviceType" value="Desktop"/>
        <groups>
            <run>
                <include name="@setup"/>
                <include name="@login"/>
                <include name="@accounts"/>
                <include name="@customers"/>
                <include name="@positions"/>
                <include name="@transactions"/>
            </run>
        </groups>
        <classes>
            <class
                    name="com.qmetry.qaf.automation.step.client.gherkin.GherkinScenarioFactory"/>
        </classes>
    </test>
</suite>
