<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Web Automation Suite" verbose="0">
    <listeners>
        <listener class-name="com.quantum.listeners.QuantumReportiumListener"/>
    </listeners>

    <test name="Setup" enabled="true">
        <parameter name="perfecto.capabilities.deviceType" value="Desktop"/>
        <groups>
            <run>
                <include name="@setup"/>
            </run>
        </groups>
        <classes>
            <class
                    name="com.qmetry.qaf.automation.step.client.gherkin.GherkinScenarioFactory"/>
        </classes>
    </test>
    <test name="Login" enabled="true">
        <parameter name="perfecto.capabilities.deviceType" value="Desktop"/>
        <groups>
            <run>
                <include name="@login"/>
            </run>
        </groups>
        <classes>
            <class
                    name="com.qmetry.qaf.automation.step.client.gherkin.GherkinScenarioFactory"/>
        </classes>
    </test>
    <test name="Accounts" enabled="true">
        <parameter name="perfecto.capabilities.deviceType" value="Desktop"/>
        <groups>
            <run>
                <include name="@accounts"/>
            </run>
        </groups>
        <classes>
            <class
                    name="com.qmetry.qaf.automation.step.client.gherkin.GherkinScenarioFactory"/>
        </classes>
    </test>
    <test name="Customers" enabled="true">
        <parameter name="perfecto.capabilities.deviceType" value="Desktop"/>
        <groups>
            <run>
                <include name="@customers"/>
            </run>
        </groups>
        <classes>
            <class
                    name="com.qmetry.qaf.automation.step.client.gherkin.GherkinScenarioFactory"/>
        </classes>
    </test>
    <test name="Transactions" enabled="true">
        <parameter name="perfecto.capabilities.deviceType" value="Desktop"/>
        <groups>
            <run>
                <include name="@transactions"/>
            </run>
        </groups>
        <classes>
            <class
                    name="com.qmetry.qaf.automation.step.client.gherkin.GherkinScenarioFactory"/>
        </classes>
    </test>
</suite>
